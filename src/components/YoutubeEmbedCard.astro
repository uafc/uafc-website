---
interface Props {
  videoId: string;
  title: string;
}

const { videoId, title } = Astro.props;

const thumbnailUrl = `https://img.youtube.com/vi/${videoId}/0.jpg`;
const videoUrl = `https://www.youtube.com/watch?v=${videoId}`;
---

<div class="max-w-xl rounded overflow-hidden shadow-lg">
  <div class="relative">
    <img src={thumbnailUrl} alt={title} class="w-full">
    <div class="absolute inset-0 flex items-center justify-center">
      <svg class="w-20 h-20 text-white opacity-75 hover:opacity-100 transition-opacity duration-300" viewBox="0 0 24 24" fill="currentColor">
        <path d="M8 5v14l11-7z"/>
      </svg>
    </div>
    <a href={videoUrl} target="_blank" rel="noopener noreferrer" class="absolute inset-0" aria-label={`Play ${title} on YouTube`}></a>
  </div>
  <div class="px-6 py-4">
    <div class="font-bold text-xl mb-2 text-white">{title}</div>
  </div>
</div>